<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import java.lang.String?>

<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="ecommerce.controller.LoginController"
           stylesheets="@/ecommerce/css/theme.css">

    <!-- Panel -->
    <VBox styleClass="white-panel"
          spacing="20"
          maxWidth="400"
          maxHeight="400"
          alignment="CENTER">

        <!-- Header Label -->
        <Label text="Sign In">
            <styleClass>
                <String fx:value="header-size"/>
                <String fx:value="black-text"/>
            </styleClass>
        </Label>

        <!-- Guide Label -->
        <Label text="Enter credentials to access your account" styleClass="gray-text"/>
        <Region/>

        <!-- Name Field -->
        <TextField fx:id="nameField"
                promptText="Full Name"/>

        <!-- Email Field -->
        <PasswordField fx:id="emailField"
                       promptText="Email Address"/>

        <!-- Login Button -->
        <Button fx:id="loginButton"
                onAction="#onLogin"
                text="LOGIN"
                VBox.vgrow="NEVER"
                maxWidth="Infinity">
            <styleClass>
                <String fx:value="block-button"/>
                <String fx:value="primary-bg"/>
            </styleClass>
        </Button>

        <HBox alignment="CENTER" spacing="4">

            <!-- Register Label -->
            <Label text="Don't have an account?" styleClass="gray-text"/>

            <!-- Register Page Button -->
            <Button fx:id="registerPageButton"
                    onAction="#goToRegister"
                    text="Sign Up">
                <styleClass>
                    <String fx:value="text-button"/>
                    <String fx:value="primary-text"/>
                </styleClass>
            </Button>
        </HBox>


    </VBox>


</StackPane>


